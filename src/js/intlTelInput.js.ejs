  DOWN: 40,
  ENTER: 13,
  ESC: 27,
  PLUS: 43,
  A: 65,
  Z: 90,
  ZERO: 48,
  NINE: 57,
  SPACE: 32,
  BSPACE: 8,
  TAB: 9,
  DEL: 46,
  CTRL: 17,
  CMD1: 91,
