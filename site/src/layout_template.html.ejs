<!-- HEADER -->
<header class="navbar navbar-expand-lg navbar-dark iti-navbar sticky-top">
  <nav class="container-xxl iti-gutter flex-wrap flex-lg-nowrap">

    <!-- HEADER MENU TOGGLE (MOBILE: VISIBLE, DESKTOP: HIDDEN) -->
    <div class="iti-navbar-toggle">
      <button
        class="navbar-toggler"
        aria-label="Open navigation menu"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#itiSidebar"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          class="bi"
          fill="white"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
          ></path>
        </svg>
      </button>
    </div>

    <!-- HEADER BRAND (MOBILE: CENTERED, DESKTOP: LHS) -->
    <a class="navbar-brand me-0" href="/">intl-tel-input</a>

    <div class="d-flex"></div>

    <!-- HEADER RHS NAV (MOBILE: HIDDEN, DESKTOP: VISIBLE) -->
    <div class="offcanvas-lg offcanvas-end flex-grow-1" tabindex="-1" id="bdNavbar" aria-labelledby="bdNavbarOffcanvasLabel">
      <div class="offcanvas-body p-4 pt-0 p-lg-0">

        <ul class="navbar-nav flex-row flex-wrap bd-navbar-nav">
        </ul>

        <ul class="navbar-nav flex-row flex-wrap ms-md-auto">
          <li class="nav-item dropdown col-6 col-lg-auto">
            <a
              class="nav-link dropdown-toggle py-2 px-0 px-lg-2 <% if (pageType === 'docs') { %>active<% } %>"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Docs
            </a>
            <ul class="dropdown-menu">
              <% docsDropdownPages.forEach((p) => { %>
                <li>
                  <a class="dropdown-item <% if (pageType === 'docs' && name === p.name) { %>active<% } %>" href="<%= p.href %>"><%= p.label %></a>
                </li>
              <% }); %>
            </ul>
          </li>
          <li class="nav-item col-6 col-lg-auto">
            <a class="nav-link py-2 px-0 px-lg-2 <% if (pageType === 'playground') { %>active<% } %>" href="/playground">Playground</a>
          </li>
          <li class="nav-item dropdown col-6 col-lg-auto">
            <a
              class="nav-link dropdown-toggle py-2 px-0 px-lg-2 <% if (pageType === 'examples') { %>active<% } %>"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Examples
            </a>
            <ul class="dropdown-menu">
              <% examplesDropdownPages.forEach((p) => { %>
                <li>
                  <a class="dropdown-item <% if (pageType === 'examples' && name === p.name) { %>active<% } %>" href="<%= p.href %>"><%= p.label %></a>
                </li>
              <% }); %>
            </ul>
          </li>
          <li class="nav-item col-6 col-lg-auto">
            <a
              class="nav-link px-lg-2"
              href="https://github.com/jackocnr/intl-tel-input"
              target="_blank"
              rel="noopener"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                class="navbar-nav-svg"
                viewBox="0 0 512 499.36"
                role="img"
              >
                <title>GitHub</title>
                <path
                  fill="white"
                  fill-rule="evenodd"
                  d="M256 0C114.64 0 0 114.61 0 256c0 113.09 73.34 209 175.08 242.9 12.8 2.35 17.47-5.56 17.47-12.34 0-6.08-.22-22.18-.35-43.54-71.2 15.49-86.2-34.34-86.2-34.34-11.64-29.57-28.42-37.45-28.42-37.45-23.27-15.84 1.73-15.55 1.73-15.55 25.69 1.81 39.21 26.38 39.21 26.38 22.84 39.12 59.92 27.82 74.5 21.27 2.33-16.54 8.94-27.82 16.25-34.22-56.84-6.43-116.6-28.43-116.6-126.49 0-27.95 10-50.8 26.35-68.69-2.63-6.48-11.42-32.5 2.51-67.75 0 0 21.49-6.88 70.4 26.24a242.65 242.65 0 0 1 128.18 0c48.87-33.13 70.33-26.24 70.33-26.24 14 35.25 5.18 61.27 2.55 67.75 16.41 17.9 26.31 40.75 26.31 68.69 0 98.35-59.85 120-116.88 126.32 9.19 7.9 17.38 23.53 17.38 47.41 0 34.22-.31 61.83-.31 70.23 0 6.85 4.61 14.81 17.6 12.31C438.72 464.97 512 369.08 512 256.02 512 114.62 397.37 0 256 0z"
                ></path>
              </svg>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- MAIN PAGE LAYOUT -->
<div class="container-xxl iti-gutter mt-3 my-md-4 <%= layoutClass %>">

  <!-- LEFT SIDEBAR (MOBILE: HIDDEN BUT TOGGLEABLE, DESKTOP: DEPENDS ON showLeftSidebar) -->
  <aside class="iti-left-sidebar">
    <div class="<% if (showLeftSidebar) { %>offcanvas-lg<% } else { %>offcanvas<% } %> offcanvas-start" id="itiSidebar">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">
          <a href="/">intl-tel-input</a>
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="offcanvas"
          data-bs-target="#itiSidebar"
          aria-label="Close navigation menu"
        ></button>
      </div>
      <div class="offcanvas-body flex-column">

        <!-- MAIN NAV LINKS (MOBILE ONLY) -->
        <ul class="flex-column nav nav-pills d-lg-none nav--primary-links">
          <li>
            <a class="nav-link" href="/docs">Docs</a>
          </li>
          <li>
            <a class="nav-link" href="/playground">Playground</a>
          </li>
          <li>
            <a class="nav-link" href="/examples">Examples</a>
          </li>
        </ul>

        <!-- PAGE SPECIFIC LINKS (MOBILE and DESKTOP) -->
        <% if (typeof nav !== 'undefined') { %>
          <%= nav %>
        <% } %>
      </div>
    </div>
  </aside>

  <!-- MAIN PAGE CONTENT -->
  <main class="iti-main order-1" <% if (typeof isRtl !== 'undefined') { %>style="text-align:right;"<% } %>>
    <div class="iti-content ps-lg-2">
      <%= content %>
    </div>
  </main>

  <!-- RIGHT SIDEBAR (MOBILE: HIDDEN, DESKTOP: DEPENDS ON layoutClass) -->
  <aside class="iti-right-sidebar"></aside>
</div>